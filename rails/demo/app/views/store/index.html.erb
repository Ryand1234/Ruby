<h1>Your Catalog</h1>
<% @products.each do |product| %>
  <div>
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class = 'price_line'>
      <span class='price'><%= product.price %></span>
      <%= button_to 'Add to Cart', line_items_path(:product_id => product) %>
    </div>
  </div>
<% end %>
